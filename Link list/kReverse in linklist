}*/
node* kreverse(node* head,int k)    //this is better because in this approach space complexity is O(1)
{
    node* curr=head;
    node* pre=NULL;
    node* tail=NULL;
    node* newhead=NULL;
    node* join=NULL;
    while(curr)
    {
        int count =0;
        join=curr;
        pre=NULL;
     while(curr&&count<k)
     {
         node *temp=curr->next;
         curr->next=pre;
         pre=curr;
         curr=temp;
         count++;
     }
      if(newhead==NULL)
      {
          newhead=pre;
      }
     if(tail!=NULL)
     {
         tail->next=pre;
     }
     tail=join;
    }
    return newhead;

}

int main()
{
    node* head=takeinput();
    print(head);
    head=kreverse(head,3);
    print(head);


}
